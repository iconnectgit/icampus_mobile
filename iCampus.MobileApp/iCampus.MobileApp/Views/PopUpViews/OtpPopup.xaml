<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="iCampus.MobileApp.Views.PopUpViews.OtpPopup"
    x:Name="otpPopup"
    Color="Transparent">
    
    <Frame CornerRadius="10"
           VerticalOptions="CenterAndExpand"
           HorizontalOptions="CenterAndExpand"
           BackgroundColor="White"
           Margin="5"
           HeightRequest="{OnPlatform iOS='235', Android='245'}"
           WidthRequest="{OnPlatform iOS='350', Android='340'}">
        <StackLayout>
            <Label Text="Please enter the one-time password (OTP) that has been sent to your registered e-mail address"
                   Style="{StaticResource DescriptionLabelStyle}"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"/>
            <Label Text="Enter OTP" 
                   Style="{StaticResource TitleLabelStyle}"
                   FontSize="16" 
                   FontAttributes="Bold"
                   FontFamily=""
                   Margin="0,5,0,0"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"/>
            <Entry x:Name="OtpEntry"
                   Text="{Binding OneTimePassword}"
                   Placeholder="Enter OTP"
                   Keyboard="Numeric"
                   MaxLength="8"
                   HorizontalOptions="FillAndExpand" />
            <Label Text="{Binding OtpEmailActionMessage}"
                   Style="{StaticResource DescriptionLabelStyle}"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"
                   FontSize="12"
                   IsVisible="{Binding IsOtpEmailActionMessageVisible}"
                   TextColor="Red"/>
            <Button
                   Text="Continue"
                   FontSize="14"
                   Margin="0,0,0,0"
                   FontAttributes="Bold"
                   TextColor="White"
                   BackgroundColor="#007ac2"
                   VerticalOptions="End"
                   HorizontalOptions="End"
                   BorderColor="#007ac2"
                   CornerRadius="6"
                   Padding="5"
                   HeightRequest="40"
                   IsVisible="{Binding IsContinueButtonVisible}"
                   Command="{Binding ContinueOTPCommand}" />
        </StackLayout>
    </Frame>
</toolkit:Popup>